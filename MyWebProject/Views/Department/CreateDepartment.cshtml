@model DepartmentToListDTO
<form asp-controller="Department" asp-action="AddDepartment" method="post">

    <div class="form-group">

    <input type="text" asp-for="DepartmentId" class="form-control" id="name"  hidden>


    </div>
    <div class="form-group">
        <label>DepartmentName</label>
        <input type="text" asp-for="DepartmentName" class="form-control" id="name" placeholder="Enter DepartmentName...">
        <span asp-validation-for="DepartmentName" style="color:red"></span>

    </div>


    <button type="submit" class="btn btn-primary">Create</button>
</form>